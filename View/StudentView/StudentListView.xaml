<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMplayground.View.StudentView.StudentListView"
             Title="Danh sách học viên"
             xmlns:viewmodel="clr-namespace:MVVMplayground.ViewModel.StudentViewModel"
             xmlns:model="clr-namespace:MVVMplayground.Model"
             x:DataType="viewmodel:StudentListViewModel">

    <Grid RowDefinitions=".8*, Auto"          RowSpacing="10">        <CollectionView            ItemsSource="{Binding StudentList}"            SelectionMode="None">            <CollectionView.ItemTemplate>                <DataTemplate x:DataType="model:Student">                    <Frame>                        <Frame.GestureRecognizers>                            <TapGestureRecognizer NumberOfTapsRequired="1"                                                  Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:StudentListViewModel}}, Path=Tap1Command}"                                                  CommandParameter="{Binding .}"/>                        </Frame.GestureRecognizers>                        <Grid Padding="5"                               RowSpacing="5"                              RowDefinitions="Auto, Auto">                            <Grid Grid.Row="0"                                  ColumnDefinitions="Auto, Auto"                                  ColumnSpacing="200">                                <Grid ColumnDefinitions="Auto, Auto"                                      ColumnSpacing="5">                                    <Label Text="Mã lớp:" FontSize="20"/>                                    <Label Grid.Column="1"                                            x:DataType="viewmodel:StudentListViewModel"                                           Text="{Binding Classid}"                                            FontSize="20"/>                                </Grid>                                <Grid Grid.Column="1"                                      ColumnDefinitions="Auto, Auto"                                      ColumnSpacing="10">                                    <Label Text="Mã học sinh:" FontSize="20"/>                                    <Label Grid.Column="1" Text="{Binding StudentID}" FontSize="20"/>                                </Grid>                            </Grid>                            <Grid Grid.Row="1"                                  ColumnDefinitions="Auto, Auto"                                  ColumnSpacing="200">                                <Grid ColumnDefinitions="Auto, Auto"                                      ColumnSpacing="5">                                    <Label Text="Tên học sinh" FontSize="15"/>                                    <Label Grid.Column="1" Text="{Binding StudentName}" FontSize="20"/>                                </Grid>                                <Grid Grid.Column="1"                                      ColumnDefinitions="Auto, Auto"                                      ColumnSpacing="5">                                    <Label Text="Ngày sinh học sinh" FontSize="20"/>                                    <Label Grid.Column="1" Text="{Binding StudentDOB}" FontSize="15"/>                                </Grid>                            </Grid>                        </Grid>                    </Frame>                </DataTemplate>            </CollectionView.ItemTemplate>        </CollectionView>        <Grid Grid.Row="2"              ColumnDefinitions="Auto, Auto, Auto"              HorizontalOptions="CenterAndExpand"              VerticalOptions="CenterAndExpand"              ColumnSpacing="50">            <Button Text="Thêm"                    Command="{Binding AddCommand}"/>            <Button Grid.Column="1"                     Text="Xóa"                    Command="{Binding DelCommand}"/>            <Button Grid.Column="2"                    Text="Sửa"                    Command="{Binding EditCommand}"/>        </Grid>    </Grid></ContentPage>